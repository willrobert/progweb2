
<div class="row ">
    <div class="col-8">
        <h1>Cursos da UFAM</h1>
    </div>
    <div class="col-4">
        <div class="float-right mt-4">
            <a class="btn btn-pprimary" href="/curso/create">Adicionar Curso</a>
        </div>
    </div>
</div>

<div class="bs-docs-section">

        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1 id="tables">Tables</h1>
            </div>

            <div class="bs-component">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col"style="width: 20%">Sigla</th>
                    <th scope="col"style="width: 60%">Nome</th>
                    <th scope="col" style="width: 20%; text-align:right">Opções</th>
                  </tr>
                </thead>
                <tbody>
                    {{#each cursos}}
                  <tr class="table-active">
                    <th scope="row">Dark</th>
                    <td>{{sigla}}</td>
                    <td>{{curso}}</td>
                    <td style="text-align: right">
                        <a href="curso/read/{{id}}"><i class="far fa-eye"></i></a>
                         <a href="curso/update/{{id}}"><i class="fas fa-pencil-alt"></i></a>
                         <a href="curso/remove/{{id}}"><i class="fas fa-trash-alt"></i></a>
                    </td>
                  </tr>
                 {{//each}}
                </tbody>
              </table> 
            <button class="source-button btn btn-primary btn-xs" role="button" tabindex="0">&lt; &gt;</button></div><!-- /example -->
          </div>
        </div>
      </div>
