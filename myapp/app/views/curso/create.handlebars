<div class="row ">
    <div class="col-8">
        <h1>Adicionar Curso</h1>
    </div>
    <div class="col-4">
        <div class="float-right mt-4">
            <a class="btn btn-secondary" href="/curso">Voltar</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <form action="" method="post">
            <div class="form-group">
                <label for="sigla">Sigla</label>
                <input type="email" class="form-control" id="sigla" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">Na duvida da sigla busque no site da UFAM.</small>
            </div>
            <div class="form-group">
                <label for="sigla">Nome</label>
                <input type="text" class="form-control" name="nome" id="nome" aria-describedby="emailHelp" placeholder="Enter email">                
            </div>
            <div class="form-group">
                    <label for="descricao"></label>
                    <textarea class="form-control" name="descricao" id="descricao" rows="3"></textarea>
            </div>

            <fieldset class="form-group">
                    <legend>Area do Curso</legend>
                    <div class="form-check">
                      <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="id_area" value="1" >
                        Exatas (Matematica, Computação, Estatística)
                      </label>
                    </div>
                    <div class="form-check">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="id_area"  value="2">
                        Huamas (Historia, Letras, Psicologia)
                      </label>
                    </div>
                    <div class="form-check disabled">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="id_area"  value="3" >
                        Bilogicas (Medicina, Biologia, Farmacia)
                      </label>
                    </div>
                  </fieldset>
                  <button type="submit" class="btn btn-outline-primary">Adicionar Curso</button>
        </form>
    </div>
</div>